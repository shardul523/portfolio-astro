const projects = [
  {
    title: "ProShop",
    info: "A single vendor e-commerce app",
    iname: "ProShop",
    codeLink: "https://github.com/shardul523/proshop",
    demoLink: "https://proshop-ql6y.onrender.com/",
  },
  {
    title: "ChatRooms",
    info: "A chat web app",
    iname: "ChatRooms",
    codeLink: "https://github.com/shardul523/chatrooms-web",
    demoLink: "https://chatrooms-web.web.app",
  },
  {
    title: "TV-Wiz",
    info: "Find and save info about your favourite shows anytime",
    iname: "TVWiz",
    codeLink: "https://github.com/shardul523/TV-Wiz",
    demoLink: "https://shardul523.github.io/TV-Wiz/",
  },
  // {
