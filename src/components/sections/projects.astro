  // }
];
---

<Section id="projects">
  <SectionHeading
    subHeading="Have a look at some of"
    mainHeading="My Projects"
  />
  <SectionContent
    class:list={"flex mt-5 justify-space-around flex-wrap align-center gap-5"}
  >
    {projects.map((project) => <ProjectCard project={project} />)}
  </SectionContent>
</Section>
