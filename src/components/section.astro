---
const { class: className, id = "#" } = Astro.props;
---

<style>
  section {
    display: flex;
    flex-direction: column;
    min-height: 85vh;
    max-width: 1378px;
    margin: 0 auto;
    padding: 2rem;
  }

  .intro-section {
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    flex-wrap: wrap;
  }
</style>

<section id={id} class={`${className}`}>
  <slot />
</section>
